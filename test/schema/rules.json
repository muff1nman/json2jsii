{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/RuleGroups",
  "definitions": {
    "RuleGroup": {
      "required": [
        "name",
        "rules"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "interval": {
          "type": "string"
        },
        "rules": {
          "items": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "$ref": "#/definitions/RuleNode"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "RuleGroups": {
      "required": [
        "groups"
      ],
      "properties": {
        "groups": {
          "items": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "$ref": "#/definitions/RuleGroup"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "RuleNode": {
      "required": [
        "expr"
      ],
      "properties": {
        "record": {
          "type": "string"
        },
        "alert": {
          "type": "string"
        },
        "expr": {
          "type": "string"
        },
        "for": {
          "type": "string"
        },
        "labels": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "annotations": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}
